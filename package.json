{
  "name": "@evotecit/htmlextensions",
  "version": "0.1.7",
  "description": "Tiny JS/CSS extensions for libraries like DataTables and ApexCharts.",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EvotecIT/HTMLExtensions.git"
  },
  "bugs": {
    "url": "https://github.com/EvotecIT/HTMLExtensions/issues"
  },
  "homepage": "https://htmlextensions.evotec.xyz",
